@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@Html.Partial("/Views/Partials/ToastPartial.cshtml")
<form id="registerForm">
    <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
    <div class="input-group">
        <div class="form-floating">
            <input type="text" class="form-control" id="floatingName" placeholder="Name">
            <label for="floatingName">Name</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="floatingSurname" placeholder="Surname">
            <label for="floatingSurname">Surname</label>
        </div>
    </div>
    <div class="form-floating">
        <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
        <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
    </div>
    <button class="btn btn-sm btn-success w-100" type="submit">Register</button>
    <div class="w-100 text-center p-1"></div>
    <a href="/auth/login" class="btn btn-sm btn-primary w-100" type="submit">Login</a>
    <p class="mt-5 mb-3 text-body-secondary">&copy; @DateTime.Now.Year.ToString()</p>
</form>
@section Scripts{
    <script type="text/javascript" src="~/js/ajaxServices.js"></script>
    <script type="text/javascript" src="~/js/register.js"></script>
}